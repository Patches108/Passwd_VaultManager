<Application
    x:Class="Passwd_VaultManager.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Passwd_VaultManager"
    xmlns:models="clr-namespace:Passwd_VaultManager.Models"
    xmlns:tb="http://www.hardcodet.net/taskbar"
    StartupUri="MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/FormStyle.xaml" />
                <ResourceDictionary Source="Styles/TextBlocks.xaml" />
                <ResourceDictionary Source="Styles/PanelStyle.xaml" />
                <ResourceDictionary Source="Styles/Button.xaml" />
                <ResourceDictionary Source="Styles/WinStyle.xaml" />
                <ResourceDictionary Source="Styles/MenuItems.xaml" />
                <ResourceDictionary Source="Styles/RadioButtons.xaml" />
                <ResourceDictionary Source="Styles/RadioCheckControls.xaml" />
                <ResourceDictionary Source="Styles/SliderStyle.xaml" />
                <ResourceDictionary Source="Styles/ScrollBar.xaml" />
                <ResourceDictionary Source="Styles/ComboBox.xaml" />
                <ResourceDictionary Source="Styles/DarkGroupBoxStyle.xaml" />
                <ResourceDictionary Source="Styles/ToggleButton.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <models:BoolToTextConverter x:Key="BoolToTextConverter" />
            <models:BoolToBrushConverter x:Key="BoolToBrushConverter" />
            <models:BoolToImageConverter x:Key="BoolToImageConverter" />


            <!--  Context menu for tray icon  -->
            <ContextMenu x:Key="TrayContextMenu">
                <MenuItem Click="TrayMenu_Open_Click" Header="Open" />
                <MenuItem Click="TrayMenu_New_Click" Header="New Vault" />
                <MenuItem Click="TrayMenu_Settings_Click" Header="Settings" />
                <Separator />
                <MenuItem Click="TrayMenu_Exit_Click" Header="Exit" />
            </ContextMenu>

            <!--  Tray icon definition  -->
            <tb:TaskbarIcon
                x:Key="TrayIcon"
                ContextMenu="{StaticResource TrayContextMenu}"
                IconSource="Images/icon.ico"
                ToolTipText="Daily Reminder"
                Visibility="Visible" />
        </ResourceDictionary>
    </Application.Resources>

</Application>
