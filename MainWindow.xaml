                    <v:PasswordPanel
                        x:Name="testPanel9"
                        Margin="1"
                        VerticalAlignment="Center" />
                </StackPanel>-->
            </ScrollViewer>

            <!--  Footer Controls  -->
            <Grid Grid.Row="3" Grid.Column="1">
                <TextBlock
                    x:Name="lblStat"
                    Margin="50,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Style="{StaticResource StatusText}"
                    Text="Status" />

                <Button
                    x:Name="cmd_Close"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Click="cmdClose_Click"
                    Content="Close"
                    Style="{StaticResource ControlButton}" />
            </Grid>
        </Grid>
    </Border>
</Window>
