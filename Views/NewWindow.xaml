<Window
    x:Class="Passwd_VaultManager.Views.NewWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Passwd_VaultManager.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="New Window"
    Width="380"
    Height="450"
    Background="Transparent"
    ResizeMode="NoResize"
    Style="{StaticResource WinStyle}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Border CornerRadius="8" Style="{StaticResource FormStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>


            <!--  App Name  -->
            <StackPanel Grid.Row="0" Orientation="Vertical">
                <Label
                    x:Name="lblAppName"
                    Width="300"
                    Height="26"
                    Content="Application/Website Name"
                    Style="{StaticResource LabelHeader}" />
                <TextBox
                    x:Name="txtAppName"
                    Width="300"
                    Height="25"
                    Style="{StaticResource WhiteTextField}"
                    Text="{Binding AppName}" />
            </StackPanel>

            <!--  User Name  -->
            <StackPanel Grid.Row="1" Orientation="Vertical">
                <Label
                    x:Name="lblUserName"
                    Width="300"
                    Height="26"
                    Content="User Name"
                    Style="{StaticResource LabelHeader}" />
                <TextBox
                    x:Name="txtUserName"
                    Width="300"
                    Height="25"
                    Style="{StaticResource WhiteTextField}"
                    Text="User Name" />
            </StackPanel>

            <!--  Password Controls  -->
            <StackPanel Grid.Row="2" Orientation="Vertical">

                <Label
                    x:Name="lblPasswd"
                    Width="300"
                    Height="26"
                    Content="Passwd"
                    Style="{StaticResource LabelHeader}" />

                <!--  Password and Copy to Clip button  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="30" />
                    </Grid.ColumnDefinitions>

                    <TextBox
                        x:Name="txtPasswd"
                        Grid.Column="0"
                        Width="300"
                        Height="25"
                        Margin="40,0,0,0"
                        Style="{StaticResource WhiteTextField}"
                        Text="Passwd" />
                    <Button
                        x:Name="cmdCopyToClipboard"
                        Grid.Column="1"
                        Width="20"
                        Height="20"
                        Content="Copy"
                        FontSize="10"
                        Style="{StaticResource ControlButton}" />

                    <!--  Add controls here for customising password (chars + bitrate)  -->

                </Grid>


                <Grid Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Button
                        x:Name="cmdGenPasswd"
                        Grid.Column="0"
                        Width="150"
                        Height="25"
                        Click="cmdGenPasswd_Click"
                        Content="Generate Password"
                        FontSize="13"
                        Style="{StaticResource ControlButton}" />
                    <Button
                        x:Name="cmdManuallyEnterPasswd"
                        Grid.Column="1"
                        Width="150"
                        Height="25"
                        Click="cmdManuallyEnterPasswd_Click"
                        Content="Manual Password"
                        FontSize="13"
                        Style="{StaticResource ControlButton}" />

                </Grid>

            </StackPanel>

            <!--  Footer Buttons  -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button
                    x:Name="cmdCreateVault"
                    Grid.Column="0"
                    Width="120"
                    Height="35"
                    Content="Create"
                    Style="{StaticResource ControlButton}" />

                <Button
                    x:Name="cmdCancel"
                    Grid.Column="1"
                    Width="120"
                    Height="35"
                    Click="cmdCancel_Click"
                    Content="Cancel"
                    Style="{StaticResource ControlButton}" />
            </Grid>
        </Grid>
    </Border>
</Window>
