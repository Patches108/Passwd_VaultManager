<Window
    x:Class="Passwd_VaultManager.Views.EditWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Passwd_VaultManager.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Passwd_VaultManager.ViewModels"
    Title="Edit Window"
    Width="380"
    Height="500"
    Background="Transparent"
    Closing="RunCleanup"
    Loaded="NewWindow_Loaded"
    ResizeMode="NoResize"
    Style="{StaticResource WinStyle}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Border CornerRadius="8" Style="{StaticResource FormStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="54*" />
                <RowDefinition Height="44*" />
                <RowDefinition Height="102*" />
                <RowDefinition Height="41*" />
            </Grid.RowDefinitions>


            <!--  App Name  -->
            <StackPanel
                Grid.Row="0"
                Margin="0,15,0,6"
                Orientation="Vertical">
                <Label
                    x:Name="lblAppName"
                    Width="300"
                    Height="26"
                    Content="Application/Website Name:"
                    Style="{StaticResource LabelHeader}" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        x:Name="txtAppName"
                        Grid.Column="0"
                        Width="300"
                        Height="25"
                        Margin="37,0,0,0"
                        GotFocus="txtAppName_GotFocus"
                        Style="{StaticResource WhiteTextField}"
                        TabIndex="0"
                        Text="{Binding AppName}"
                        TextChanged="txtAppName_TextChanged" />

                    <Button
                        x:Name="AppName_HelpMe"
                        Grid.Column="1"
                        Width="18"
                        Margin="15,0,8,2"
                        Click="AppNameHelpMe_Click"
                        Content="?"
                        FontSize="13.5"
                        Style="{StaticResource InfoButtons}"
                        TabIndex="1" />
                </Grid>
            </StackPanel>

            <!--  User Name  -->
            <StackPanel
                Grid.Row="1"
                Grid.RowSpan="2"
                Margin="0,3,0,144"
                Orientation="Vertical">
                <Label
                    x:Name="lblUserName"
                    Width="300"
                    Height="26"
                    Content="User Name / Email / Login Text:"
                    Style="{StaticResource LabelHeader}" />
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBox
                        x:Name="txtUserName"
                        Width="300"
                        Height="25"
                        Margin="37,0,0,0"
                        GotFocus="txtUserName_GotFocus"
                        Style="{StaticResource WhiteTextField}"
                        TabIndex="2"
                        Text="{Binding Username}"
                        TextChanged="txtUserName_TextChanged" />

                    <Button
                        x:Name="UserName_HelpMe"
                        Grid.Column="1"
                        Width="18"
                        Margin="15,0,8,2"
                        Click="UsernameHelpMe_Click"
                        Content="?"
                        FontSize="13.5"
                        Style="{StaticResource InfoButtons}"
                        TabIndex="3" />

                    <Button
                        x:Name="cmdCopyEmailToClipboard"
                        Grid.Row="1"
                        Width="30"
                        Height="25"
                        Margin="307,3,0,0"
                        Click="cmdCopyEmailToClopboard"
                        FontSize="10"
                        Style="{StaticResource ControlButton}"
                        TabIndex="7">
                        <Image
                            Width="20"
                            Height="20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Source="/Images/CopyToClipboard.png" />
                    </Button>
                </Grid>
            </StackPanel>

            <!--  Password Controls  -->
            <StackPanel
                Grid.Row="2"
                Grid.RowSpan="2"
                Margin="0,8,0,0"
                Orientation="Vertical">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <CheckBox
                        x:Name="EditPassword"
                        Grid.Column="0"
                        Margin="43,0,0,0"
                        Checked="chk_EditPassword_Checked"
                        Content="Edit Password"
                        Style="{StaticResource CheckControl}"
                        TabIndex="4"
                        Unchecked="EditPassword_Unchecked" />

                    <Button
                        x:Name="Edit_HelpMe"
                        Grid.Column="1"
                        Width="18"
                        Height="25"
                        Margin="196,0,0,0"
                        Click="EditHelpMe_Click"
                        Content="?"
                        FontSize="13.5"
                        Style="{StaticResource InfoButtons}"
                        TabIndex="5" />

                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Label
                        x:Name="lblPasswd"
                        Grid.Column="0"
                        Width="300"
                        Height="26"
                        Margin="40,0,0,0"
                        Content="Password:"
                        IsEnabled="False"
                        Style="{StaticResource LabelHeader}" />
                    <Label
                        x:Name="lblPasswdStatus"
                        Grid.Column="1"
                        Width="300"
                        Height="26"
                        Content="{Binding PasswdStatus}"
                        Style="{StaticResource LabelHeader}" />

                </Grid>


                <!--  Password Controls  -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="30" />
                    </Grid.ColumnDefinitions>

                    <TextBox
                        x:Name="txtPasswd"
                        Grid.Row="0"
                        Grid.Column="0"
                        Width="300"
                        Height="38"
                        Margin="40,0,0,0"
                        HorizontalScrollBarVisibility="Auto"
                        IsReadOnly="True"
                        Style="{StaticResource WhiteTextField}"
                        TabIndex="6"
                        Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                        TextChanged="txtPasswd_TextChanged"
                        VerticalScrollBarVisibility="Disabled" />
                    <Button
                        x:Name="cmdCopyToClipboard"
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="30"
                        Height="25"
                        Click="cmdCopyToClopboard"
                        FontSize="10"
                        Style="{StaticResource ControlButton}"
                        TabIndex="7">
                        <Image
                            Width="20"
                            Height="20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Source="/Images/CopyToClipboard.png" />
                    </Button>

                    <StackPanel
                        Grid.Row="1"
                        Margin="43,5,0,0"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                        <TextBlock
                            x:Name="lblBitRateLabel"
                            Margin="0,0,10,0"
                            IsEnabled="False"
                            Style="{StaticResource TextStyle}"
                            Text="Bit Rate:" />
                        <RadioButton
                            x:Name="rdo_128"
                            Margin="0,2,10,0"
                            Click="rad_128_Click"
                            Content="128"
                            GroupName="BitRate"
                            IsEnabled="False"
                            TabIndex="8" />
                        <RadioButton
                            x:Name="rdo_192"
                            Margin="0,2,10,0"
                            Click="rad_192_Click"
                            Content="192"
                            GroupName="BitRate"
                            IsEnabled="False"
                            TabIndex="9" />
                        <RadioButton
                            x:Name="rdo_256"
                            Margin="0,2,10,0"
                            Click="rad_256_Click"
                            Content="256"
                            GroupName="BitRate"
                            IsChecked="True"
                            IsEnabled="False"
                            TabIndex="10" />
                    </StackPanel>

                    <!--  Reveal button  -->
                    <Button
                        x:Name="cmdToggleReveal"
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="30"
                        Height="25"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Click="ToggleReveal_Click"
                        FontSize="10"
                        Style="{StaticResource ControlButton}"
                        TabIndex="11">
                        <Image
                            x:Name="Img_TogglePasswdMask"
                            Width="23"
                            Height="23"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Source="/Images/hide_reveal.png" />
                    </Button>

                    <Grid Grid.Row="2" Margin="40,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Character exclusion controls  -->
                        <TextBox
                            x:Name="txtCharactersToExclude"
                            Grid.Column="0"
                            Width="125"
                            Height="23"
                            Margin="5,0,0,0"
                            GotFocus="txtCharactersToExclude_GotFocus"
                            IsEnabled="False"
                            LostFocus="txtCharactersToExclude_LostFocus"
                            MaxLength="8"
                            Style="{StaticResource WhiteTextField}"
                            TabIndex="12"
                            Text="{Binding ExcludedChars}"
                            TextChanged="txtCharactersToExclude_TextChanged" />

                        <!--  Controls for string length  -->
                        <StackPanel
                            Grid.Column="1"
                            Margin="25,0,0,0"
                            Orientation="Horizontal">
                            <Slider
                                x:Name="sldPasswdLength"
                                Width="105"
                                Margin="0,0,0,0"
                                VerticalAlignment="Center"
                                IsEnabled="False"
                                LargeChange="6"
                                Maximum="41"
                                Minimum="8"
                                SmallChange="1"
                                Style="{StaticResource Horizontal_Slider}"
                                TabIndex="13"
                                ValueChanged="sldPasswdLength_ValueChanged" />
                            <TextBlock
                                x:Name="lblPasswdSliderValue"
                                Margin="8,0,0,0"
                                Style="{StaticResource TextStyle}"
                                Text="{Binding SliderValue}" />
                        </StackPanel>
                    </Grid>
                </Grid>


                <Grid Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Button
                        x:Name="cmdGenPasswd"
                        Grid.Column="0"
                        Width="150"
                        Height="25"
                        Margin="20,0,19,0"
                        VerticalAlignment="Top"
                        Click="cmdGenPasswd_Click"
                        Content="Generate Password"
                        FontSize="13"
                        IsEnabled="False"
                        Style="{StaticResource ControlButton}"
                        TabIndex="14" />
                    <Button
                        x:Name="cmdManuallyEnterPasswd"
                        Grid.Column="1"
                        Width="150"
                        Height="25"
                        Margin="19,0,20,0"
                        VerticalAlignment="Top"
                        Click="cmdManuallyEnterPasswd_Click"
                        Content="Manual Password"
                        FontSize="13"
                        IsEnabled="False"
                        Style="{StaticResource ControlButton}"
                        TabIndex="15" />

                </Grid>

            </StackPanel>

            <!--  Footer Buttons  -->
            <Grid Grid.Row="3" Margin="0,2,0,-8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button
                    x:Name="EditWin_cmdUpdateVault"
                    Grid.Column="0"
                    Width="120"
                    Height="35"
                    Margin="34,23,35,22"
                    Click="EditWin_cmdUpdateVault_Click"
                    Content="Update"
                    Style="{StaticResource ControlButton}" />

                <Button
                    x:Name="EditWin_cmdClose"
                    Grid.Column="1"
                    Width="120"
                    Height="35"
                    Margin="35,23,34,22"
                    Click="EditWin_cmdClose_Click"
                    Content="Close"
                    Style="{StaticResource ControlButton}" />
            </Grid>
        </Grid>
    </Border>
</Window>
