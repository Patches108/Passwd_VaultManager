<Window
    x:Class="Passwd_VaultManager.Views.EditWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Passwd_VaultManager.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Passwd_VaultManager.ViewModels"
    Title="Edit Window"
    Width="380"
    Height="450"
    Background="Transparent"
    ResizeMode="NoResize"
    Style="{StaticResource WinStyle}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Border CornerRadius="8" Style="{StaticResource FormStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>


            <!--  App Name  -->
            <StackPanel Grid.Row="0" Orientation="Vertical">
                <Label
                    x:Name="EditWin_lblAppName"
                    Width="300"
                    Height="26"
                    Content="Application/Website Name"
                    Style="{StaticResource LabelHeader}" />
                <TextBlock
                    x:Name="EditWin_txtAppName"
                    Width="300"
                    Height="25"
                    Style="{StaticResource TextStyle}"
                    Text="{Binding AppName}" />
            </StackPanel>

            <!--  User Name  -->
            <StackPanel Grid.Row="1" Orientation="Vertical">
                <Label
                    x:Name="EditWin_lblUserName"
                    Width="300"
                    Height="26"
                    Content="User Name"
                    Style="{StaticResource LabelHeader}" />
                <TextBlock
                    x:Name="EditWin_txtUserName"
                    Width="300"
                    Height="25"
                    Style="{StaticResource TextStyle}"
                    Text="User Name" />
            </StackPanel>

            <!--  Password Controls  -->
            <StackPanel Grid.Row="2" Orientation="Vertical">
                <Label
                    x:Name="EditWin_lblPasswd"
                    Width="300"
                    Height="26"
                    Content="Passwd"
                    Style="{StaticResource LabelHeader}" />
                <TextBlock
                    x:Name="EditWin_txtPasswd"
                    Width="300"
                    Height="25"
                    Style="{StaticResource TextStyle}"
                    Text="Passwd" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Button
                        x:Name="EditWin_cmdGenPasswd"
                        Grid.Column="0"
                        Width="150"
                        Height="25"
                        Content="Generate Password"
                        FontSize="13"
                        Style="{StaticResource ControlButton}" />
                    <Button
                        x:Name="EditWin_cmdManuallyEnterPasswd"
                        Grid.Column="1"
                        Width="150"
                        Height="25"
                        Content="Manual Password"
                        FontSize="13"
                        Style="{StaticResource ControlButton}" />

                </Grid>

            </StackPanel>

            <!--  Footer Buttons  -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button
                    x:Name="EditWin_cmdUpdateVault"
                    Grid.Column="0"
                    Width="120"
                    Height="35"
                    Content="Update"
                    Style="{StaticResource ControlButton}" />

                <Button
                    x:Name="EditWin_cmdClose"
                    Grid.Column="1"
                    Width="120"
                    Height="35"
                    Content="Close"
                    Style="{StaticResource ControlButton}" />
            </Grid>
        </Grid>
    </Border>
</Window>
