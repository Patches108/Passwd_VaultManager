<Window
    x:Class="Passwd_VaultManager.Views.Helper"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Helper"
    Width="350"
    Height="250"
    AllowsTransparency="True"
    Background="Transparent"
    Loaded="frmHelper_Loaded"
    ResizeMode="NoResize"
    ShowActivated="False"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStyle="None"
    mc:Ignorable="d">

    <!--  Animations  -->
    <Window.Resources>

        <BitmapImage x:Key="speech_on" UriSource="/Passwd_VaultManager;component/Images/speech_on.png" />
        <BitmapImage x:Key="speech_off" UriSource="/Passwd_VaultManager;component/Images/speech_off.png" />

        <!--  Fade + slide in from right  -->
        <Storyboard x:Key="EnterStoryboard">
            <DoubleAnimation
                Storyboard.TargetProperty="(UIElement.Opacity)"
                From="0"
                To="1"
                Duration="0:0:0.4" />
            <DoubleAnimation
                AccelerationRatio="0.3"
                DecelerationRatio="0.7"
                Storyboard.TargetProperty="(Window.Left)"
                Duration="0:0:0.4" />
        </Storyboard>

        <!--  Fade + slide out to right  -->
        <Storyboard x:Key="ExitStoryboard">
            <DoubleAnimation
                Storyboard.TargetProperty="(UIElement.Opacity)"
                To="0"
                Duration="0:0:0.4" />
            <DoubleAnimation
                AccelerationRatio="0.7"
                DecelerationRatio="0.3"
                Storyboard.TargetProperty="(Window.Left)"
                Duration="0:0:0.4" />
        </Storyboard>
    </Window.Resources>

    <!--  Main container  -->
    <Border
        x:Name="RootBorder"
        Padding="10"
        Background="#DD333333"
        CornerRadius="10">

        <Grid x:Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Close Button (top-right)  -->
            <StackPanel
                Grid.Row="0"
                Grid.Column="1"
                Height="25"
                Margin="5,0,5,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <ToggleButton
    x:Name="toggleSpeech"
    Width="25"
    Height="25"
    Background="Transparent"
    BorderBrush="Transparent"
    Focusable="False"
    FocusVisualStyle="{x:Null}"
    Checked="Sound_On"
    Unchecked="Sound_Off">

                    <ToggleButton.Style>
                        <Style TargetType="ToggleButton">
                            <!-- default icon -->
                            <Setter Property="Content">
                                <Setter.Value>
                                    <Image Width="16" Height="16" Source="{StaticResource speech_off}" />
                                </Setter.Value>
                            </Setter>

                            <!-- IMPORTANT: real clickable surface + no default chrome -->
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                                        </Border>

                                        <ControlTemplate.Triggers>
                                            <!-- Optional hover feedback -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="0.85"/>
                                            </Trigger>

                                            <!-- Optional press feedback -->
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Opacity" Value="0.7"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <!-- checked icon -->
                            <Style.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <Image Width="16" Height="16" Source="{StaticResource speech_on}" />
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ToggleButton.Style>
                </ToggleButton>

                <Button
                    x:Name="btnClose"
                    Width="28"
                    Height="28"
                    Margin="0,0,0,5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="cmdX_Click"
                    Content="X"
                    Cursor="Hand"
                    FontWeight="Bold"
                    Foreground="White" />

            </StackPanel>


            <!--  Helper image/avatar  -->
            <Image
                x:Name="imgHelperAvatar"
                Grid.Row="1"
                Width="145"
                Height="183"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Source="/Images/helper.png"
                Stretch="UniformToFill" />

            <!--  Helper text message  -->
            <TextBlock
                x:Name="txtMessage"
                Grid.Row="1"
                Grid.Column="1"
                Margin="10,0,0,0"
                VerticalAlignment="Top"
                FontSize="14"
                Foreground="White"
                Text="message will appear here."
                TextWrapping="Wrap" />
        </Grid>
    </Border>

</Window>
