<UserControl
    x:Class="Passwd_VaultManager.Views.PasswordPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Passwd_VaultManager.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mods="clr-namespace:Passwd_VaultManager.Models"
    xmlns:v="clr-namespace:Passwd_VaultManager.ViewModels"
    d:DataContext="{d:DesignInstance Type=mods:AppVault}"
    d:DesignHeight="50"
    d:DesignWidth="450"
    Background="Transparent"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!--  Shared VM  -->
        <v:PasswdPanelVM x:Key="PasswdPanelVM" />
    </UserControl.Resources>

    <Border
        x:Name="PasswdPanelBorder"
        CornerRadius="8"
        Style="{StaticResource PanelStyle}">

        <!--  SelectCommand triggered when clicked  -->
        <Border.InputBindings>
            <MouseBinding
                Command="{Binding DataContext.PasswdPanelVM.SelectCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                CommandParameter="{Binding}"
                MouseAction="LeftClick" />
        </Border.InputBindings>

        <Grid x:Name="GridMain_PasswordPanel">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="70" />
            </Grid.ColumnDefinitions>

            <!--  Column 0  -->
            <!--  Setttings section - Will be replaced by Gear Icon  -->
            <Image
                Grid.Column="0"
                Width="35"
                Height="35"
                Source="/Images/PanelSettings.png" />

            <Grid
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!--  Middle Column (1)  -->
                <TextBlock
                    x:Name="txtAppName_PP"
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Center"
                    Style="{StaticResource TextStyle}"
                    Text="{Binding AppName}" />

                <TextBlock
                    x:Name="txtUserName_PP"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    Style="{StaticResource SmallTextStyle}"
                    Text="Username: " />
                <TextBlock
                    x:Name="txtPassword_PP"
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    Style="{StaticResource SmallTextStyle}"
                    Text="Password:" />

                <TextBlock
                    x:Name="txtUserNameSet_PP"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    Style="{StaticResource SmallTextStyle}"
                    Text="{Binding IsUserNameSet, Converter={StaticResource BoolToTextConverter}}" />
                <TextBlock
                    x:Name="txtPasswordSet_PP"
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    Style="{StaticResource SmallTextStyle}"
                    Text="{Binding IsPasswdSet, Converter={StaticResource BoolToTextConverter}}" />
            </Grid>

            <!--  Column 2  -->
            <!--  Icon to represent status : green check icon for enable/set? X icon for not set? (I need to think about this...)  -->
            <Image
                Grid.Column="2"
                Width="35"
                Height="35"
                Source="{Binding IsStatusGood, Converter={StaticResource BoolToImageConverter}}" />

        </Grid>
    </Border>
</UserControl>
