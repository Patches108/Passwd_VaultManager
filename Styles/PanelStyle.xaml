<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="PanelStyle" TargetType="Border">
        <Setter Property="Background" Value="#FF2B2B2B" />
        <Setter Property="BorderBrush" Value="#FF1A832B" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Margin" Value="0,5,0,5" />

        <Style.Triggers>

            <!--  TESTING THIS  -->
            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ItemsPresenter}}" Value="True">
                <Setter Property="Background" Value="#3E434A" />
                <Setter Property="BorderBrush" Value="#27D644" />
                <Setter Property="BorderThickness" Value="2" />
            </DataTrigger>


            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>

                            <!--  Background Panel Animation  -->
                            <ColorAnimation
                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                To="#FF3b3a3a"
                                Duration="0:0:0.25" />

                            <!--  Border Animation  -->
                            <ColorAnimation
                                Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                To="#FF27d644"
                                Duration="0:0:0.25" />

                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>

                            <!--  Background Panel Animation  -->
                            <ColorAnimation
                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                To="#FF2B2B2B"
                                Duration="0:0:0.25" />

                            <!--  Border Animation  -->
                            <ColorAnimation
                                Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                To="#FF1A832B"
                                Duration="0:0:0.25" />

                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>