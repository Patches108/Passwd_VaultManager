<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!--
        ======================================================================================
        SIDE PANEL BUTTON
        ======================================================================================
    -->
    <Style x:Key="SideCmdStyle" TargetType="RadioButton">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,5,0,0" />

        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Stretch" />
        <Setter Property="Padding" Value="12,0,12,0" />

        <Setter Property="Width" Value="230" />
        <Setter Property="Height" Value="40" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border
                        x:Name="Cmd_P_Border"
                        Width="{TemplateBinding Width}"
                        Height="{TemplateBinding Height}">
                        <Border.Background>
                            <SolidColorBrush x:Name="BorderBackground" Color="#272B2F" />
                        </Border.Background>

                        <Grid>
                            <Border
                                x:Name="Indicator"
                                Width="4"
                                Height="35"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Background="#FFFFFF"
                                CornerRadius="2"
                                Visibility="Collapsed" />

                            <ContentPresenter
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Indicator" Property="Visibility" Value="Visible" />
                        </Trigger>

                        <!--  Mouse enter trigger  -->
                        <EventTrigger RoutedEvent="Border.MouseEnter" SourceName="Cmd_P_Border">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation
                                        Storyboard.TargetName="BorderBackground"
                                        Storyboard.TargetProperty="Color"
                                        From="#272B2F"
                                        To="#3E434A"
                                        Duration="0:0:0.3" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>


                        <!--  Mouse leave trigger  -->
                        <EventTrigger RoutedEvent="Border.MouseLeave" SourceName="Cmd_P_Border">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation
                                        Storyboard.TargetName="BorderBackground"
                                        Storyboard.TargetProperty="Color"
                                        From="#3E434A"
                                        To="#272B2F"
                                        Duration="0:0:0.3" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Cmd_P_Border" Property="Background" Value="#212529" />
                            <Setter TargetName="Indicator" Property="Visibility" Value="Visible" />
                        </Trigger>

                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!--
        ======================================================================================
        CONTROL BUTTON
        ======================================================================================
    -->


    <!--  TO BE UPDATE TO BE MORE STYLISH LATER  -->
    <Style x:Key="ControlButton" TargetType="Button">
        <Setter Property="Background" Value="DimGray" />
        <Setter Property="Foreground" Value="WhiteSmoke" />
        <Setter Property="BorderBrush" Value="#FF1A832B" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="5,2,5,2" />
        <Setter Property="Template">
            <Setter.Value>

                <!--  Round corners  -->
                <ControlTemplate TargetType="Button">
                    <Border
                        x:Name="border"
                        Padding="5,2,5,2"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8"
                        SnapsToDevicePixels="True">

                        <ContentPresenter
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            RecognizesAccessKey="True" />

                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <!--  Is mouse over trigger & Animation  -->
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>

                            <!--  Background Panel Animation  -->
                            <ColorAnimation
                                Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                To="Gray"
                                Duration="0:0:0.25" />

                            <!--  Border Animation  -->
                            <ColorAnimation
                                Storyboard.TargetProperty="(Button.BorderBrush).(SolidColorBrush.Color)"
                                To="#FF27d644"
                                Duration="0:0:0.25" />

                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>

                            <!--  Background Panel Animation  -->
                            <ColorAnimation
                                Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                To="DimGray"
                                Duration="0:0:0.25" />

                            <!--  Border Animation  -->
                            <ColorAnimation
                                Storyboard.TargetProperty="(Button.BorderBrush).(SolidColorBrush.Color)"
                                To="#FF1A832B"
                                Duration="0:0:0.25" />

                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>

            <!--  CLICK TRIGGER = TODO HERE  -->


        </Style.Triggers>

    </Style>



    <!--
        ======================================================================================
        SIDE BUTTON
        ======================================================================================
    -->


    <!--  TO BE UPDATE TO BE MORE STYLISH LATER  -->
    <Style x:Key="SideButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="WhiteSmoke" />

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>

                            <!--  Background Panel Animation  -->
                            <ColorAnimation
                                Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                To="Gray"
                                Duration="0:0:0.25" />

                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>

                            <!--  Background Panel Animation  -->
                            <ColorAnimation
                                Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                To="Transparent"
                                Duration="0:0:0.25" />

                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>


            <!--  CLICK TRIGGER = TODO HERE  -->


        </Style.Triggers>

    </Style>

</ResourceDictionary>